# AI Research Assistant Environment Variables
# Copy this to .env and add your actual API keys

# LLM API Keys (choose one or more for fallback)
OPENAI_API_KEY=your_openai_api_key_here
DEEPSEEK_API_KEY=your_deepseek_api_key_here
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# Tavily Search API Key (required for web search)
TAVILY_API_KEY=your_tavily_api_key_here

# Flask Configuration
SECRET_KEY=your_secret_key_for_production

# Optional: Google Translate API Key (for translation features)
GOOGLE_TRANSLATE_API_KEY=your_google_translate_key_here

# Redis Configuration (for background tasks)
REDIS_URL=redis://localhost:6379/0

# Database Configuration
DATABASE_URL=sqlite:///research_history.db